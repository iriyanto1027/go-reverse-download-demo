# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_ENV=development

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=file-download-system-uploads

# For LocalStack (local S3 testing)
# Uncomment these when using LocalStack
# AWS_ENDPOINT_URL=http://localhost:4566
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test

# S3 Upload Configuration
S3_PRESIGNED_URL_EXPIRY=15m
S3_CHUNK_SIZE=5242880
# 5MB chunks (5242880 bytes)

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# Client Configuration
CLIENT_ID=restaurant-1
CLIENT_TOKEN=your-client-token-here
SERVER_WS_URL=ws://localhost:8080/ws/connect

# File Configuration
FILE_PATH=/data/report.bin
# Path to the file on client machine to upload

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error
